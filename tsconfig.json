{
    "compilerOptions": {
      "rootDir": "./src",
      "outDir": "./assets/js/",
      "target": "ES2017",
      "module": "ES2020",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "sourceMap": true,
      "inlineSourceMap": false,
      "inlineSources": false
    },
    "include": ["src/**/*.ts"]
  }
